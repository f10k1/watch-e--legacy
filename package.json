{
    "name": "watch-e",
    "version": "0.0.1",
    "description": "Web application for watching video from wireless cameras",
    "main": "index.ts",
    "scripts": {
        "dev": "start npx tsc --watch && npx nodemon",
        "migration:generate": "npx typeorm migration:generate ./migrations/migration -d ./dataSource.js & npx tsc --p ./migrations/tsconfig.json",
        "migration:start": "npx typeorm migration:run -d ./dataSource.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/f10k1/watch-e.git"
    },
    "author": "f10k1",
    "license": "ISC",
    "bugs": {
        "url": "https://github.com/f10k1/watch-e/issues"
    },
    "homepage": "https://github.com/f10k1/watch-e#readme",
    "dependencies": {
        "bcrypt": "^5.1.0",
        "dotenv": "^16.0.3",
        "express": "^4.18.2",
        "multer": "^1.4.5-lts.1",
        "mysql2": "^3.1.2",
        "passport": "^0.6.0",
        "passport-jwt": "^4.0.1",
        "pg": "^8.4.0",
        "pug": "^3.0.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "reflect-metadata": "^0.1.13",
        "typeorm": "0.3.12"
    },
    "devDependencies": {
        "@types/express": "^4.17.17",
        "@types/node": "^18.14.0",
        "nodemon": "^2.0.20",
        "typescript": "^4.9.5",
        "vite": "^4.1.4"
    },
    "nodemonConfig": {
        "watch": ["public", "index.js"],
        "ext": "js",
        "ignore": ["**views/**"],
        "exec": "node index.js"
      }
}